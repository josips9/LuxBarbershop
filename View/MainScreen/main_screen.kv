<MainScreenView>
    MDScreen:
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        Image:
            source: "assets/images/logo.png"
            pos_hint: {"center_x": .18, "center_y": .95}
        Image:
            source: "assets/images/bg.png"
            size_hint: .6, .6
            pos_hint: {"center_x": .5, "center_y": .65}
        MDLabel:
            text: "H e l l o !"
            font_name: "Md-Poppins"
            font_size: "23sp"
            pos_hint: {"center_y": .38}
            halign: "center"
            color: rgba(34, 34, 34, 255)
        MDLabel:
            text: "Best barbershop in town. Sign up to get started."
            font_name: "SmBo-Poppins"
            font_size: "13sp"
            size_hint_x: .85
            pos_hint: {"center_x": .5, "center_y": .3}
            halign: "center"
            color: rgba(127, 127, 127, 255)
        Button:
            text: "LOGIN"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .18}
            background_color: 0, 0, 0, 0
            font_name: "Md-Poppins"
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "dashboard screen"
            canvas.before:
                Color:
                    rgba: rgba(198, 147, 84, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
        Button:
            text: "SIGN UP"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .09}
            background_color: 0, 0, 0, 0
            font_name: "Md-Poppins"
            color: rgba(198, 147, 84, 255)
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "signup screen"
            canvas.before:
                Color:
                    rgba: rgba(198, 147, 84, 255)
                Line:
                    width: 1.2
                    rounded_rectangle: (self.x, self.y, self.width, self.height, 5, 5, 5, 5, 100)
